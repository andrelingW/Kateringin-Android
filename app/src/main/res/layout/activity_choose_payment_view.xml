<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Checkout.ChoosePaymentController">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/checkout_location_edit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="20dp"
        android:paddingEnd="25dp"
        android:theme="@style/CustomActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Choose Payment"
        app:titleTextAppearance="@color/blue" />

    <View
        android:id="@+id/divider21"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkout_location_edit_toolbar" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Virtual Account"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider21" />

    <ImageButton
        android:id="@+id/bca_va_method"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/mandiri_va_method"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView65"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/bri_va_method"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/bca_va_method"
        app:layout_constraintStart_toStartOf="@+id/bca_va_method"
        app:layout_constraintTop_toBottomOf="@+id/bca_va_method"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/mandiri_va_method"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/bni_va_method"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bca_va_method"
        app:layout_constraintTop_toBottomOf="@+id/textView65"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/permata_va_method"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/mandiri_va_method"
        app:layout_constraintStart_toStartOf="@+id/mandiri_va_method"
        app:layout_constraintTop_toBottomOf="@+id/mandiri_va_method"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/bni_va_method"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mandiri_va_method"
        app:layout_constraintTop_toBottomOf="@+id/textView65"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/cimb_va_method"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/bni_va_method"
        app:layout_constraintStart_toStartOf="@+id/bni_va_method"
        app:layout_constraintTop_toBottomOf="@+id/bni_va_method"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>